---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import BaseBody from "../layouts/BaseBody.astro";
import BaseMain from "../layouts/BaseMain.astro";
import FormattedDate from "../components/FormattedDate.astro";

interface WithId {
  id: string;
}

type Props = CollectionEntry<"blog">["data"] & WithId;

const { id, title, description, pubDate, updatedDate } = Astro.props;
let image = `/img/blog/${id}.webp`;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={image} />
  </head>

  <BaseBody>
    <Header />
    <BaseMain>
      <article class="prose dark:prose-invert">
        <div>
          <FormattedDate date={pubDate} />
          {
            updatedDate && (
              <div>
                Last updated on <FormattedDate date={updatedDate} />
              </div>
            )
          }
        </div>
        <h1>{title}</h1>
        <slot />
      </article>
    </BaseMain>
    <Footer />
  </BaseBody>
</html>
